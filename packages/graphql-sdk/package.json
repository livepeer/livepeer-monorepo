{
  "name": "@livepeer/graphql-sdk",
  "description": "A GraphQL schema that can be used to simplify protocol interactions in the browser or node.js.",
  "version": "1.0.0-alpha.5",
  "license": "MIT",
  "main": "main/index.js",
  "module": "lib/index.js",
  "scripts": {
    "build": "npm -s run build-module && npm -s run build-main",
    "build-main": "NODE_ENV=production npx babel src --out-dir main --ignore spec.js,test.js --plugins=transform-es2015-modules-commonjs --source-maps inline",
    "build-module": "NODE_ENV=production npx babel src --out-dir lib --ignore spec.js,test.js --source-maps inline",
    "postbuild": "node generate-schema.js",
    "copy-docs": "rm -rf ../../docs/graphql-sdk && mkdir ../../docs/graphql-sdk && cp -r docs/* ../../docs/graphql-sdk",
    "docs": "npx graphdoc --force && echo 'main .title { background: #000; }' >> ./docs/styles/graphdoc.css && npx graphql-markdown ./schema.json --update-file README.md --heading-level 2",
    "graphiql": "node ./server.js",
    "prebuild": "rm -rf lib && rm -rf main",
    "prepack": "npm -s run build",
    "test": "npx nyc ava",
    "coverage": "npx nyc report --reporter=lcov",
    "lcov-badge": "npx lcov-badge -o coverage.svg coverage/lcov.info && sed -i .bak 's/3\"/0\"/g' coverage.svg && rm *.bak"
  },
  "dependencies": {
    "@livepeer/sdk": "^1.0.0-alpha.5",
    "babel-runtime": "^6.26.0",
    "bn": "^1.0.1",
    "graphql": "^14.0.2",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tools": "^2.19.0",
    "graphql-type-json": "^0.2.1"
  },
  "devDependencies": {
    "@2fd/graphdoc": "^2.4.0",
    "ava": "0.25.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "cross-fetch": "^2.2.0",
    "express": "4.16.3",
    "express-graphql": "0.6.12",
    "graphql-markdown": "^3.2.0",
    "lcov-badge": "^1.0.4",
    "nyc": "^11.6.0"
  },
  "graphdoc": {
    "baseUrl": "./",
    "logo": "<a href=\"https://livepeer.github.io/livepeerjs/\" rel=\"nofollow\" style=\"\n    padding: 29px;\n    box-sizing: border-box;\n    display: block;\n\"><img src=\"https://github.com/livepeer/livepeerjs/raw/master/livepeer_js.png\" alt=\"LivepeerJS\" style=\"max-width:100%;image-rendering: -webkit-optimize-contrast;\"></a>",
    "output": "./docs",
    "schemaFile": "./schema.json"
  },
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  },
  "homepage": "https://livepeer.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/livepeer/livepeerjs.git"
  }
}
