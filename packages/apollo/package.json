{
  "name": "@livepeer/apollo",
  "private": true,
  "version": "1.0.0-alpha.5",
  "license": "MIT",
  "main": "main/index.js",
  "module": "lib/index.js",
  "scripts": {
    "build": "run-p build-main build-module",
    "build-main": "cross-env NODE_ENV=production babel src --out-dir main --ignore spec.js,test.js --plugins=@babel/plugin-transform-modules-commonjs --source-maps inline",
    "build-module": "cross-env NODE_ENV=production babel src --out-dir lib --ignore spec.js,test.js --source-maps inline",
    "copy-docs": "echo 'No copy-docs script specified'",
    "graphiql": "yarn build && node ./server.js",
    "prebuild": "rimraf lib && rimraf main",
    "prepack": "npm -s run build",
    "start": "run-p \"build-** -- --watch\"",
    "test": "ava"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/plugin-transform-flow-strip-types": "^7.4.0",
    "@babel/plugin-transform-modules-commonjs": "^7.4.3",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "ava": "1.4.1",
    "express": "4.16.4",
    "express-graphql": "0.8.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "dependencies": {
    "@livepeer/graphql-sdk": "^1.0.0-alpha.5",
    "@livepeer/sdk": "^1.0.0-alpha.5",
    "apollo-cache-inmemory": "^1.3.11",
    "apollo-cache-persist": "^0.1.1",
    "apollo-client": "^2.4.7",
    "apollo-link": "^1.2.4",
    "apollo-link-http": "^1.5.5",
    "apollo-link-state": "^0.4.1",
    "graphql": "^14.0.2",
    "graphql-tools": "^4.0.0",
    "node-fetch": "^2.2.0"
  }
}
