{
  "name": "@livepeer/subgraph",
  "private": true,
  "version": "1.0.0-alpha.6",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm run codegen",
    "codegen": "graph codegen --output-dir types/ subgraph.yaml",
    "build": "graph build subgraph.yaml",
    "build-ipfs": "graph build --ipfs /ip4/127.0.0.1/tcp/5001 subgraph.yaml",
    "build-wast": "graph build -t wast subgraph.yaml",
    "deploy": "graph deploy livepeer --verbosity debug --node http://127.0.0.1:8020/ --ipfs http://127.0.0.1:5001 subgraph.yaml"
  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "0.14.0",
    "@graphprotocol/graph-ts": "0.14.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "@graphprotocol/graph-cli",
      "@graphprotocol/graph-ts"
    ]
  }
}

