{
  "name": "@livepeer/subgraph",
  "version": "1.0.0-alpha.5",
  "private": true,
  "license": "MIT",
  "scripts": {
    "create": "graph create livepeer/livepeer --node https://api.thegraph.com/deploy/",
    "create-local": "graph create livepeer/livepeer --node http://127.0.0.1:8020",
    "codegen": "graph codegen --debug --output-dir src/types/",
    "build": "graph build --debug",
    "deploy": "graph deploy livepeer/livepeer --debug --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "deploy-local": "graph deploy livepeer/livepeer --debug --ipfs http://localhost:5001 --node http://127.0.0.1:8020"
  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.7.1",
    "@graphprotocol/graph-ts": "^0.5.1"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "@graphprotocol/graph-cli",
      "@graphprotocol/graph-ts"
    ]
  }
}
