{
  "private": true,
  "name": "livepeerjs",
  "version": "1.0.0-alpha.3",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/livepeer/livepeerjs.git"
  },
  "bugs": "https://github.com/livepeer/livepeerjs/issues",
  "homepage": "https://livepeer.org",
  "scripts": {
    "clean": "npx lerna clean --yes && rm -rf node_modules",
    "docs": "npx lerna run docs && npx lerna run copy-docs",
    "prepare": "npx lerna run build --stream --ignore @livepeer/explorer --ignore @livepeer/player",
    "release": "npx lerna publish --conventional-commits --yes",
    "release:dry-run": "npx lerna publish --skip-git --skip-npm --cd-version prerelease --conventional-commits --yes",
    "release:alpha": "npx lerna publish --cd-version prerelease --conventional-commits --yes",
    "test": "npx lerna run test --ignore @livepeer/explorer --ignore @livepeer/player",
    "updated": "npx lerna updated --json"
  },
  "devDependencies": {
    "flow-bin": "^0.69.0",
    "lerna": "^2.9.0"
  }
}
